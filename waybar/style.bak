#clock,
#battery,
#network,
#memory,
#cpu,
#pulseaudio {
    padding: 5px;

    /* Keep the same background */
    background: #1a1a1a;

    /* Border settings */
    border: 0.9px solid transparent;
    border-radius: 50px;

    /* Fake gradient border using layered background */
    background-image:
        linear-gradient(#1a1a1a, #1a1a1a),
        linear-gradient(45deg, rgba(33,204,255,0.9), rgba(0,255,153,0.9));
    background-origin: border-box;
    background-clip: padding-box, border-box;
}


#battery.charging {
    color: white;
    background-color: #26A65B;
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: black;
    }
}

#battery.warning:not(.charging) {
    background: #f53c3c;
    color: white;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: steps(12);
    animation-iteration-count: infinite;
    animation-direction: alternate;
}
